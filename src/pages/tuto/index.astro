---

<PrimaryLayout>
  <div
    class="place-self-center grid grid-cols-3 grid-rows-[auto,1fr] mx-auto -mt-4 p-4 max-w-3xl"
  >
    <h1 class="col-span-3">Liste des tutoriels</h1>
    <div class="col-start-1 row-start-2">
      <h2>Basique</h2>
      <ul class="space-y-2 list-disc list-inside">
        {
          basic.map(({ title, link }) => (
            <li>
              <a href={link} class="text-green-500 hover:underline">
                {title}
