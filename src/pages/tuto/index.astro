        {
          advanced.map(({ title, link }) => (
            <li>
              <a href={link} class="text-orange-500 hover:underline">
                {title}
              </a>
            </li>
          ))
        }
      </ul>
    </div>
    <div class="col-start-3 row-start-2">
      <h2>Spécial</h2>
      <ul class="space-y-2 list-disc list-inside">
        {
          special.map(({ title, link }) => (
            <li>
